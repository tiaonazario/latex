% Define a numeração das equações de forma sequencial
\counterwithout{equation}{chapter}

% Personalizando a fonte
\renewcommand{\fonte}[1]
{
	\\
	\centering\small{Fonte: #1}
}

% Retira o espaçamento entre a legenda e a figura
\setlength{\abovecaptionskip}{0pt}

% -----------------------------------------------------------------------------
% Redefinindo o tamanho das fontes dos titulos.
% -----------------------------------------------------------------------------
% \titleformat{comando}{formato}{rótulo}{separação}{antes}[depois]
% \titlespacing{<comando>}{<esquerda>}{<acima>}{<abaixo>}

\titleformat{\chapter}{\normalfont\bfseries\MakeUppercase}{}{0em}{}
\titleformat{\section}{\normalfont\bfseries\MakeUppercase}{}{0em}{}
\titleformat{\subsection}{\normalfont\MakeUppercase}{}{0em}{}
\titleformat{\subsubsection}{\normalfont\bfseries}{}{0em}{}

\titlespacing{\chapter}{0pt}{12pt}{6pt}
\titlespacing{\section}{0pt}{12pt}{6pt}
\titlespacing{\subsection}{0pt}{12pt}{6pt}
\titlespacing{\subsubsection}{0pt}{12pt}{6pt}

% -----------------------------------------------------------------------------
% Configurações gerais
% -----------------------------------------------------------------------------
% Tamanho da indentação do parágrafo
\setlength{\parindent}{1.25cm}

% Espaçamento entre um parágrafo e outro
\setlength{\parskip}{0.0cm}

% Define as listas de item compactas (sem espaçamento entre os itens)
\setlist{noitemsep, topsep=0pt, parsep=0pt, partopsep=0pt}

% Retira o espaço extra desnecessário nas frases
\frenchspacing

\sloppy
\epstopdfsetup{outdir=./illustrations/figures/to-pdf/}

% configurar linguagens
\definecolor{lightgray}{HTML}{f8f9fa}
%\definecolor{keywordstyle}{HTML}{03523F}
\definecolor{commentstyle}{HTML}{03523F}
\lstset{
	language=VHDL,
	backgroundcolor=\color{lightgray},
	basicstyle=\footnotesize,
	keywordstyle=\footnotesize\color{blue},
	commentstyle=\footnotesize\color{commentstyle}
}
\renewcommand{\lstlistingname}{Código}

% Redefine Apêndice para Anexo
\renewcommand{\appendixname}{Anexo}
\renewcommand{\appendixpagename}{Anexos}
\renewcommand{\appendixtocname}{Anexos}

\lstdefinelanguage{Assembly}{ % Define a linguagem Assembly
  morekeywords={mov, add, sub, jmp, je}, % Adiciona as palavras-chave
  sensitive=false, % Define se as palavras-chave são sensíveis a maiúsculas e minúsculas
  morecomment=[l]{;}, % Define o caractere de comentário
  morestring=[b]", % Define o caractere de string
}

\lstset{ % Define as opções de formatação
  language=Assembly, % Usa a linguagem Assembly definida anteriormente
  basicstyle=\ttfamily\small, % Define a fonte e o tamanho básico
  keywordstyle=\bfseries, % Define o estilo para as palavras-chave
  commentstyle=\itshape, % Define o estilo para os comentários
  stringstyle=\ttfamily, % Define o estilo para as strings
  showstringspaces=false, % Não mostra os espaços nas strings
  breaklines=true, % Quebra as linhas longas
  numbers=left, % Posiciona os números de linha à esquerda
  numberstyle=\tiny, % Define o tamanho dos números de linha
  stepnumber=1, % Define o intervalo dos números de linha
  % frame=single, % Adiciona uma moldura ao redor do código
}

\definecolor{mygray}{rgb}{0.5,0.5,0.5}
\definecolor{mygreen}{rgb}{0,0.6,0}
