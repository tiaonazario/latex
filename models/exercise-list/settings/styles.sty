% Definir as variáveis
\providecommand{\imprimirlogoinstituicao}{}
\newcommand{\logoinstituicao}[2]{\renewcommand{\imprimirlogoinstituicao}{\includegraphics[width={#1}\textwidth]{#2}}}

\providecommand{\imprimirdepartamento}{}
\newcommand{\departamento}[1]{\renewcommand{\imprimirdepartamento}{#1}}

\providecommand{\imprimirprojeto}{}
\newcommand{\projeto}[1]{\renewcommand{\imprimirprojeto}{#1}}

\providecommand{\imprimirdisciplina}{}
\newcommand{\disciplina}[1]{\renewcommand{\imprimirdisciplina}{#1}}

\providecommand{\imprimircidade}{}
\newcommand{\cidade}[1]{\renewcommand{\imprimircidade}{#1}}

\providecommand{\imprimirano}{}
\newcommand{\ano}[1]{\renewcommand{\imprimirano}{#1}}


% -----------------------------------------------------------------------------
% Capa
% -----------------------------------------------------------------------------
\renewcommand{\imprimircapa}{

\begin{capa}
	
	\begin{center}
		\begin{figure}
			\centering
			\imprimirlogoinstituicao
		\end{figure}

		\MakeUppercase{\imprimirinstituicao} \\
		\MakeUppercase{\imprimirdepartamento} \\
		\MakeUppercase{\imprimirdisciplina} \\
		\MakeUppercase{\imprimirprojeto}

		\vspace{5cm}

		\MakeUppercase{\textbf{\imprimirtitulo}}
		
		\vspace{4cm}
		
		\MakeUppercase{\imprimirautor}

		\vfill

		\MakeUppercase{\imprimircidade}

		\MakeUppercase{\imprimirano}

	\end{center}
		
\end{capa}
}

% Define a numeração das equações de forma sequencial
\counterwithout{equation}{chapter}

% Personalizando a fonte
\renewcommand{\fonte}[1]
{
	\\
	\centering\small{Fonte: #1}
}

% Retira o espaçamento entre a legenda e a figura
\setlength{\abovecaptionskip}{0pt}

% -----------------------------------------------------------------------------
% Redefinindo o tamanho das fontes dos titulos.
% -----------------------------------------------------------------------------
% \titleformat{comando}{formato}{rótulo}{separação}{antes}[depois]
% \titlespacing{<comando>}{<esquerda>}{<acima>}{<abaixo>}

\titleformat{\chapter}{\normalfont\bfseries\MakeUppercase}{}{0em}{}
\titleformat{\section}{\normalfont\bfseries\MakeUppercase}{}{0em}{}

\titlespacing{\chapter}{0pt}{12pt}{6pt}
\titlespacing{\section}{0pt}{12pt}{6pt}

% -----------------------------------------------------------------------------
% Configurações gerais
% -----------------------------------------------------------------------------
% Tamanho da indentação do parágrafo
\setlength{\parindent}{1.25cm}

% Espaçamento entre um parágrafo e outro
\setlength{\parskip}{0.0cm}

% Define as listas de item compactas (sem espaçamento entre os itens)
\setlist{noitemsep, topsep=0pt, parsep=0pt, partopsep=0pt}

% Retira o espaço extra desnecessário nas frases
\frenchspacing

\sloppy
\epstopdfsetup{outdir=./illustrations/figures/to-pdf/}
